<?xml version="1.0" encoding="UTF-8"?>
<!--
	Ant build script for the math library
-->
<project default="com">
	<property name="bin.dir" value="D:/Development/Java/lib/npw/" />
	
	<property name="math-version" value="1.0.3" />
	
	<target name="compile">
		<javac includeantruntime="false" srcdir="./src/com/nullpointerworks/" destdir="bin/" />
		<javac includeantruntime="false" srcdir="./src/exp/nullpointerworks/" destdir="bin/" />
	</target>
	
	<target name="com" depends="compile">
		<jar destfile="${bin.dir}/libnpw-math-${math-version}.jar">
	        <fileset dir="bin/" includes="module-info.class" />
	        <fileset dir="src/" includes="module-info.java" />
	        <fileset dir="bin/" includes="com/nullpointerworks/math/**/*.class" />
	        <fileset dir="bin/" includes="exp/nullpointerworks/math/**/*.class" />
	        <fileset dir="src/" includes="com/nullpointerworks/math/**/*.java" />
	        <fileset dir="src/" includes="exp/nullpointerworks/math/**/*.java" />
	    </jar>
	</target>
</project>